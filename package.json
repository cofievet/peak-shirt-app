{
  "name": "peak-tshirt-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "build-storybook": "build-storybook -s public",
    "commit": "git-cz",
    "format": "prettier --write **/*.{css,html,js,json,md}",
    "lint": "eslint --cache .",
    "prepare": "husky install && node ./scripts/copy-config.js",
    "start": "react-scripts start",
    "start:api": "json-server --watch db.json --port 3001",
    "storybook": "start-storybook -p 6006 -s public",
    "test": "react-scripts test --coverage",
    "test:coverage": "yarn open-cli coverage/lcov-report/index.html"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{css,html,js,jsx,json,md}": "prettier --write"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!<rootDir>/node_modules/",
      "!src/reportWebVitals.js",
      "!src/index.js",
      "!src/App/index.js",
      "!src/core/api/index.js",
      "!src/core/contexts/index.js",
      "!src/core/hooks/index.js",
      "!src/ds/atoms/index.js",
      "!src/ds/molecules/index.js",
      "!src/testUtils/**/*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 6,
        "functions": 9,
        "lines": 5,
        "statements": 7
      }
    }
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@fontsource/roboto": "^4.5.8",
    "@mui/icons-material": "^5.16.7",
    "@mui/material": "^5.16.7",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "mui-image": "^1.0.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-global-configuration": "^1.4.1",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.27.0",
    "react-scripts": "5.0.1",
    "react-use": "^17.5.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/node-logger": "^6.5.16",
    "@storybook/preset-create-react-app": "^4.1.2",
    "@storybook/react": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "babel-plugin-named-exports-order": "^0.0.2",
    "buffer": "^6.0.3",
    "git-cz": "^4.9.0",
    "husky": "^8.0.3",
    "json-server": "^0.17.4",
    "lint-staged": "^13.3.0",
    "msw": "^1.3.4",
    "open-cli": "^7.2.0",
    "prettier": "^2.8.8",
    "prettier-plugin-packagejson": "^2.5.3",
    "prop-types": "^15.8.1",
    "webpack": "^5.95.0"
  }
}
